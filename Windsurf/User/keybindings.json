[
  {
    // 定义大小写键默认动作为退出按键
    "key": "capslock",
    "command": "extension.vim_escape"
  },
  {
    // 调整windsurf的命令窗口
    "key": "ctrl+shift+i",
    "command": "windsurf.prioritized.command.open",
    "when": "editorTextFocus"
  },
  {
    "key": "ctrl+i",
    "command": "-windsurf.prioritized.command.open",
    "when": "editorTextFocus"
  },
  {
    // 从文件浏览器切换到编辑器
    "key": "capslock",
    "command": "workbench.action.focusLastEditorGroup",
    "when": "filesExplorerFocus"
  },
  {
    // 从版本控制面板切换到编辑器
    "key": "capslock",
    "command": "workbench.action.focusLastEditorGroup",
    "when": "workbench.scm.visible"
  },
  {
    // 在vim编辑器中大写键映射esc
    "key": "capslock",
    "command": "extension.vim_escape",
    "when": "editorTextFocus && vim.active"
  },
  {
    "key": "ctrl+j",
    "command": "selectNextSuggestion",
    "when": "suggestWidgetVisible"
  },
  {
    "key": "ctrl+k",
    "command": "selectPrevSuggestion",
    "when": "suggestWidgetVisible"
  },
  {
    "key": "ctrl+j",
    "command": "selectNextCodeAction",
    "when": "codeActionMenuVisible"
  },
  {
    "key": "ctrl+k",
    "command": "selectPrevCodeAction",
    "when": "codeActionMenuVisible"
  },
  {
    "key": "ctrl+j",
    "command": "selectNextSuggestion",
    "when": "editorTextFocus && vim.active && suggestWidgetVisible"
  },
  {
    "key": "ctrl+k",
    "command": "selectPrevSuggestion",
    "when": "editorTextFocus && vim.active && suggestWidgetVisible"
  },
  {
    // 在文件资源管理器中创建新文件
    "key": "a",
    "command": "explorer.newFile",
    "when": "filesExplorerFocus && !inputFocus"
  },
  {
    // 在文件资源管理器中创建新文件夹
    "key": "shift+a",
    "command": "explorer.newFolder",
    "when": "filesExplorerFocus && !inputFocus"
  },
  {
    // 版本管理界面聚焦时，按a键添加改变
    "key": "a",
    "command": "git.stage",
    "when": "workbench.scm.focus"
  },
  {
    // 版本管理界面聚焦时，按d键放弃改变
    "key": "d",
    "command": "git.revertChange",
    "when": "workbench.scm.focus"
  },
  {
    // 版本管理界面聚焦时，当前选择文件处于已经stage的状态下，按d键unstage
    "key": "d",
    "command": "git.unstage",
    "when": "workbench.scm.focus && scm.resourceState == 'staged'"
  },
  {
    // 版本管理界面聚焦时，按i键添加文件到忽略列表
    "key": "i",
    "command": "git.ignore",
    "when": "workbench.scm.focus"
  },
  {
    // 两个shift键快速呼出命令面板
    "key": "shift shift",
    "command": "workbench.action.showCommands",
  },
  {
    // 文件视图聚焦时，r键重命名当前文件
    "key": "r",
    "command": "renameFile",
    "when": "filesExplorerFocus && !inputFocus"
  },
  {
    "key": "ctrl+alt+left",
    "command": "workbench.action.navigateBack",
    "when": "canNavigateBack"
  },
  {
    "key": "ctrl+alt+right",
    "command": "workbench.action.navigateForward",
    "when": "canNavigateForward"
  },
  {
    // 使用 Alt+左右方向键导航前进后退
    "key": "alt+left",
    "command": "workbench.action.navigateBack",
    "when": "canNavigateBack"
  },
  {
    "key": "alt+right",
    "command": "workbench.action.navigateForward",
    "when": "canNavigateForward"
  },
]
